{% extends 'adminBase.html.twig' %}

{% block title %}Admin Login{% endblock %}

{% block body %}

<div class="wrapperSecurity container">
   {% if error %}
    <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('admin_security') }}" method="post">
    <label for="username">Username:</label>
    <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" />

    <label for="password">Password:</label>
    <input type="password" class="form-control" id="password" name="_password" />

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}
<div class="btnWrapper text-center pt-2">
    <button type="submit" class="btn btn-primary w-75 ">login</button>
</div>

</form>
</div>
{% endblock %}
