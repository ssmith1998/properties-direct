<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" type="text/css" href="{{ asset ('build/app.css') }}">
        <link href="https://fonts.googleapis.com/css2?family=Rowdies:wght@400&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link href='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.css' rel='stylesheet' />
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/css/bootstrap-datepicker.css">


        {# <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"> #}
        <meta name="viewport" content="width=device-width, initial-scale=1">


    </head>
    <body>
    {% block header  %}
    <header class="pt-3 px-3">
    <div class="row">
    <div class="logoName col-6 col-md-6 pb-2">
    <h1 class="text-white">Properties Direct</h1>
    </div>
    <div class="burgerMenu d-lg-none col-6 d-flex justify-content-end pr-2">
        <button class="hamburger hamburger--collapse" type="button">
            <span class="hamburger-box">
            <span class="hamburger-inner"></span>
        </span>
        </button>
    </div>
    <div class="mainMenu d-none d-lg-block col-lg-6">
    <ul class="d-flex justify-content-end">
    <li id="home"><a href="{{path('home')}}">Home</a></li>
    <li id="properties"><a href="{{path('propertySearchAll')}}">Properties</a></li>
    {% if app.user %}
    <div class="dropdown">
    <a href="/dashboard"><li id="account"><i class="fas fa-user-circle"></i></li></a>
    <div class="dropdownContent">
    <a href="/password/reset"><i class="fas fa-key mr-1"></i>Reset Password</a>
    <a href="/profile/edit"><i class="fas fa-user-circle mr-1"></i>Edit Profile</a>
    </div>
    </div>
    <a href="/logout"><li>Logout</li></a>

    {% else %}
     <a href="/register"><li>Register</li></a>
    <a href="/login"><li>Login</li></a>
    {% endif %}
      <a href="/contact"><li id="contact">Contact</li></a> 
    </ul>
    </div>
    
    </div>
    
    </header>
    <div class="mobileMenu">
            <div class="mobileMenuContent">
                <a href="{{path('home')}}">Home</a>
                <a href="{{path('propertySearchAll')}}">Properties</a>
                {% if app.user %}
                        <div class="dropdownMobile">
                        <a href="#" class="d-flex justify-content-between dropdownMobileButton"><p class="m-0">{{app.user.username}}</p><i class="fas fa-caret-up"></i></a>
                            <div class="dropdownMobile__content">
                                <a href="/dashboard"><i class="fas fa-user-circle mr-1"></i>Dashboard</a>
                                <a href="/password/reset"><i class="fas fa-key mr-1"></i>Reset Password</a>
                                <a href="/profile/edit"><i class="fas fa-user-circle mr-1"></i>Edit Profile</a>
                            </div>
                         </div>
                         <a href="/logout">Logout</a>
                        <a href=""></a>  
                {% else %}
                        <a href="/register">Register</a>
                        <a href="/login">Login</a>
                {% endif %}
                
                <a href="/contact">Contact</a>
            </div>
    </div>
    <div class="overlay"></div>
       {% endblock  %}

               {% for message in app.flashes('success') %}
            <div class="alert alert-success d-flex justify-content-center flash-message">
                {{ message }}
            </div>
        {% endfor %}
              {% for notice in app.flashes('notice') %}
            <div class="alert alert-danger d-flex justify-content-center flash-message">
                {{ notice }}
            </div>
        {% endfor %}


        
        
        {% block body %}

        
        
        {% endblock %}
    
    <script src="https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.js"></script>
    <script src="https://kit.fontawesome.com/f2e27c939b.js" crossorigin="anonymous"></script> 
     <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" integrity="sha512-T/tUfKSV1bihCnd+MxKD0Hm1uBBroVYBOYSk1knyvQ9VyZJpc/ALb4P0r6ubwVPSGB2GvjeoMAJJImBG12TiaQ==" crossorigin="anonymous"></script>    <script src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    {{ encore_entry_script_tags('app') }}
    </body>
</html>
