{% extends 'base.html.twig' %}

{% block title %}Results{% endblock %}

{% block body %}

{# filters mobile div #}
<div class="filtersMobile d-lg-none">
  <div class="filtersMobile__titleTab">
    <h4 class="text-white">Filters</h4>
  </div>
  <div class="filtersMobile__content">
    <div class="filtersMobile__filtersForm p-3">
      {{ form_start(form2) }}

      <div class="row">
        <div class="col-12  text-white">
          {{form_row(form2.bathsMax) }}
        </div>

        <div class="col-12  text-white">
          {{ form_row(form2.bedsMax) }}
        </div>
        <div class="col-12  text-white">
          {{ form_row(form2.sort) }}
        </div>
        <div class="col-12  text-white">
          {{ form_row(form2.priceMax) }}
        </div>
        <div class="col-12 pt-3">
          {{ form_row(form2.submit) }}


        </div>

      </div>

      {{ form_end(form2) }}
    </div>
  </div>

</div>

<h1 class="text-3xl mt-20 pl-80 py-3 bg-gray-700 d-none d-lg-block text-white rounded-br-full fixed z-10 w-75"><i class="fas fa-map-marker-alt mr-2"></i>{{addresss}}</h1>
{# filters mobile div end #}
<div class=" d-flex ">
  <div class=" d-none d-lg-block bg-dark py-3 filters z-20">
    {{ form_start(form) }}

    <div class="row">
      <h3 class="text-center w-100 text-white">Filters</h3>
      <div class="col-12">
        {{ form_row(form.bathsMax) }}
      </div>

      <div class="col-12">
        {{ form_row(form.bedsMax) }}
      </div>
      <div class="col-12">
        {{ form_row(form.sort) }}
      </div>
      <div class="col-12">
        {{ form_row(form.priceMax) }}


      </div>

      <div class="col-12">
        {{ form_row(form.submit) }}


      </div>

    </div>



    {# {{ form_row(form.submit, { 'label': 'Submit me' }) }} #}
    {{ form_end(form) }}
  </div>

  <div class="content mb-20 mt-20">
    <div class="container sm:mt-20 lg:mt-0">

    {% if pagination.getTotalItemCount > 0 %}
        
     {% for property in pagination %}

      <a href="/property/profile/{{property[0].getId()}}">
        <div class="propertyWrapper [ my-2 ]">

          <p>{{property[0].getNeighborHoodName()}}</p>
          <p>{{property[0].getLine()}}</p>
          <img class="w-100 text-center" src="{{ property["Link"] }}" alt="">
        </div>
      </a>


                {% endfor %}

    {% else %}
      <p class="alert alert-danger mt-60 text-center text-2xl lg:text-3xl" role="alert">There are no results that match your search</p>
    {% endif %}
      
    </div>
      <p class="mt-3">{{ knp_pagination_render(pagination) }}</p>

  

  </div>
</div>

  


{% endblock %}