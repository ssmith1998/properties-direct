{% extends 'base.html.twig' %}

{% block title %}Results{% endblock %}

{% block body %}
{# filters mobile div #}
<div class="filtersMobile d-lg-none">
  <div class="filtersMobile__titleTab">
    <h4 class="text-white">Filters</h4>
  </div>
  <div class="filtersMobile__content">
    <div class="filtersMobile__filtersForm p-3">
      {{ form_start(form2) }}

      <div class="row">
        <div class="col-12  text-white">
          {{form_row(form2.bathsMax) }}
        </div>

        <div class="col-12  text-white">
          {{ form_row(form2.bedsMax) }}
        </div>
        <div class="col-12  text-white">
          {{ form_row(form2.sort) }}
        </div>
        <div class="col-12  text-white">
          {{ form_row(form2.priceMax) }}
        </div>
        <div class="col-12 pt-3">
          {{ form_row(form2.submit) }}


        </div>

      </div>

      {{ form_end(form2) }}
    </div>
  </div>

</div>
{# filters mobile div end #}
<div class=" d-flex ">
  <div class=" d-none d-lg-block bg-dark py-3 filters">
    {{ form_start(form) }}

    <div class="row">
      <h3 class="text-center w-100 text-white">Filters</h3>
      <div class="col-12">
        {{ form_row(form.bathsMax) }}
      </div>

      <div class="col-12">
        {{ form_row(form.bedsMax) }}
      </div>
      <div class="col-12">
        {{ form_row(form.sort) }}
      </div>
      <div class="col-12">
        {{ form_row(form.priceMax) }}


      </div>

      <div class="col-12">
        {{ form_row(form.submit) }}


      </div>

    </div>



    {# {{ form_row(form.submit, { 'label': 'Submit me' }) }} #}
    {{ form_end(form) }}
  </div>

  <div class="content">
    <div class="container">
    {% if result|length > 0  %}
  
      {% for _property in result  %}

      {% set property = _property[0] %}
      <a href="/property/profile/{{property.getId()}}">
        <div class="propertyWrapper [ my-2 ]">

          <p>{{property.getNeighborHoodName()}}</p>
          <p>{{property.getLine()}}</p>
          <img class="w-100 text-center" src="{{ _property["Link"] }}" alt="">
        </div>
      </a>
      {% endfor %}

      
    </div>
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        {% if page == 1 %}

        {% else %}

        <li class="page-item"><a class="page-link" href="/property/search/{{page - 1}}">Previous</a></li>
        {% endif %}
        {# loop over how many pages there are in result#}
        {% for i in 1..pages %}
        {# check if the current page 'i' == the current page displayed. if so active class added #}
        {% if i == page %}
        <li class="page-item active"><a class="page-link" href="/property/{{i}}">{{i}}</a></li>
        {% else %}
        <li class="page-item "><a class="page-link" href="/property/{{i}}">{{i}}</a></li>

        {% endif %}
        {% endfor %}

        {% if pages > 1  %}
        ...
        {% if page == pages  %}
        <li class="page-item active"><a class="page-link" href="/property/{{pages}}">{{pages}}</a></li>
        {% else %}
        <li class="page-item"><a class="page-link" href="/property/{{pages}}">{{pages}}</a></li>
        {% endif %}
        {% endif %}


        {% if page == pages  %}

        {% else %}

        <li class="page-item"><a class="page-link" href="/property/{{page + 1}}">Next</a></li>

        {% endif %}


      </ul>
    </nav>

     {# mobile pagination #}
      <div class="mobilePagination  d-lg-none d-flex justify-content-around py-3">
        {% if page == 1 %}
       <div class="page-item"><a class="page-link" href="#">Previous</a></div> 

        {% else %}

       <div class="page-item active"><a class="page-link" href="/property/search/all/{{page - 1}}{{filters == null ? null : filters}}">Previous</a></div> 
        {% endif %}

        <div class="page-item active"><a class="page-link" href="">{{page}}</a></div> 

        {% if page == pages  %}
        <div class="page-item"><a class="page-link" href="#">Next</a></div> 

        {% else %}

        <div class="page-item active"> <a class="page-link" href="/property/search/all/{{page + 1}}{{filters}}">Next</a></div>

        {% endif %}
      </div>
      {# mobile pagination end #}



  </div>
</div>

    {% else %}
      <div class="text-white text-center text-3xl bg-red-600 rounded py-2 mt-3 shadow-sm">No results match your search!</div>
          {% endif %}


{% endblock %}