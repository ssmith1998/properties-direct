{% extends 'base.html.twig' %}

{% block title %}Password Reset{% endblock %}

{% block body %}

<div class="wrapper">
    <div class="container">
    <h1>Request Password</h1>
    <p>Input your email below, you will recieve further instructions on how to reset your password.</p>
        {{ form_start(form) }}

                <div class="form-group">
                    {{ form_row(form.email) }}
                </div>
                <div class="form-group text-center">
                    {{ form_row(form.request) }}
                </div>

                <div class="form-group text-center">
                    {{ form_row(form.userid) }}
                </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
